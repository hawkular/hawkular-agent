    <artifact name="${com.github.dblock:oshi-core}"/>
    <artifact name="${net.java.dev.jna:jna-platform}"/>
    <artifact name="${net.java.dev.jna:jna}"/>

    <!-- Jolokia deps -->
    <artifact name="${commons-codec:commons-codec}" />
